    hide text with dissolve
    $ renpy.pause(0.25)
    
    show expression Text("Tras la guerra, el Sargento Slaughter volvió a su rancho y montó en él una sucursal de \"La Ostra Azul\" ", xpos=0.5,ypos=0.5,xanchor="center", yanchor="center", drop_shadow=(2, 2)) as text with dissolve
    $ renpy.pause(6.2)
    hide text with dissolve
    $ renpy.pause(0.25)
    
